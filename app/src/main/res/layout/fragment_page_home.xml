<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvPageNewFeedTitle"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/colorMainApp"
        android:gravity="center"
        android:text="@string/page_home_header_title"
        android:textSize="@dimen/action_bar_title_text_size" />

    <EditText
        android:id="@+id/edtInputText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:gravity="top|left"
        android:hint="Input Text Here" />

    <Button
        android:id="@+id/btnTranslate"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="0.2"
        android:background="@drawable/bg_button_main_app"
        android:text="Translate"
        android:textColor="@color/colorMainApp" />

    <EditText
        android:id="@+id/edtReponseText"
        android:gravity="top|left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4" />
</LinearLayout>
