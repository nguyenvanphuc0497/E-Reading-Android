<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:id="@+id/tv_manager_email_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawableTop="@drawable/ic_logo_not_text_main_app"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:maxLines="1"
        android:text="@string/page_account_login_info_default"
        android:textColor="@color/colorMainApp"
        android:textSize="25sp"
        android:textStyle="bold|italic"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_manager_level_english"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_text_view_manager"
        android:drawableLeft="@drawable/ic_level_24"
        android:drawableRight="@drawable/ic_next_24"
        android:drawablePadding="10dp"
        android:padding="10dp"
        android:text="@string/page_account_tv_level_english"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/tv_manager_email_user" />

    <TextView
        android:id="@+id/tv_manager_favorite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_text_view_manager"
        android:drawableLeft="@drawable/ic_favorite_24"
        android:drawableRight="@drawable/ic_next_24"
        android:drawablePadding="10dp"
        android:padding="10dp"
        android:text="@string/page_account_tv_favorite"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/tv_manager_level_english" />

    <TextView
        android:id="@+id/tv_manager_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_text_view_manager"
        android:drawableLeft="@drawable/ic_history_24"
        android:drawableRight="@drawable/ic_next_24"
        android:drawablePadding="10dp"
        android:padding="10dp"
        android:text="@string/page_account_tv_history"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/tv_manager_favorite" />

    <TextView
        android:id="@+id/tv_manager_feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_text_view_manager"
        android:drawableLeft="@drawable/ic_feedback_24"
        android:drawableRight="@drawable/ic_next_24"
        android:drawablePadding="10dp"
        android:padding="10dp"
        android:text="@string/page_account_tv_feedback"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/tv_manager_history" />

    <TextView
        android:id="@+id/tv_manager_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_text_view_manager"
        android:drawableLeft="@drawable/ic_logout_24"
        android:drawableRight="@drawable/ic_next_24"
        android:drawablePadding="10dp"
        android:padding="10dp"
        android:text="@string/page_account_tv_logout"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/tv_manager_feedback" />
</android.support.constraint.ConstraintLayout>
